<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/scene_background_color"
        android:padding="5dp">

        <Button
            android:id="@+id/button_level1"
            style="@style/pattern_button_style"
            android:layout_marginTop="0dp"
            android:text="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_level2"
            app:layout_constraintTop_toBottomOf="@+id/text_level_title" />

        <Button
            android:id="@+id/button_level2"
            style="@style/pattern_button_style"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@id/button_level1"
            app:layout_constraintRight_toLeftOf="@+id/button_level3"
            app:layout_constraintTop_toTopOf="@id/button_level1" />

        <Button
            android:id="@+id/button_level3"
            style="@style/pattern_button_style"
            android:text="3"
            app:layout_constraintLeft_toRightOf="@id/button_level2"
            app:layout_constraintRight_toLeftOf="@+id/button_level4"
            app:layout_constraintTop_toTopOf="@id/button_level1" />

        <Button
            android:id="@+id/button_level4"
            style="@style/pattern_button_style"
            android:text="4"
            app:layout_constraintLeft_toRightOf="@id/button_level3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_level1" />

        <Button
            android:id="@+id/button_led4"
            style="@style/pattern_button_style"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_led3"
            app:layout_constraintTop_toBottomOf="@+id/text_led_title" />

        <Button
            android:id="@+id/button_led3"
            style="@style/pattern_button_style"
            android:text="3"
            app:layout_constraintLeft_toRightOf="@+id/button_led4"
            app:layout_constraintRight_toLeftOf="@+id/button_led2"
            app:layout_constraintTop_toTopOf="@id/button_led4" />

        <Button
            android:id="@+id/button_led2"
            style="@style/pattern_button_style"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@+id/button_led3"
            app:layout_constraintRight_toLeftOf="@+id/button_led1"
            app:layout_constraintTop_toTopOf="@id/button_led4" />

        <Button
            android:id="@+id/button_led1"
            style="@style/pattern_button_style"
            android:text="1"
            app:layout_constraintLeft_toRightOf="@id/button_led2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_led4" />

        <Button
            android:id="@+id/button_led8"
            style="@style/pattern_button_style"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_led7"
            app:layout_constraintTop_toBottomOf="@+id/button_led4" />

        <Button
            android:id="@+id/button_led7"
            style="@style/pattern_button_style"
            android:text="7"
            app:layout_constraintLeft_toRightOf="@id/button_led8"
            app:layout_constraintRight_toLeftOf="@+id/button_led6"
            app:layout_constraintTop_toTopOf="@id/button_led8" />

        <Button
            android:id="@+id/button_led6"
            style="@style/pattern_button_style"
            android:text="6"
            app:layout_constraintLeft_toRightOf="@id/button_led7"
            app:layout_constraintRight_toLeftOf="@+id/button_led5"
            app:layout_constraintTop_toTopOf="@id/button_led8" />

        <Button
            android:id="@+id/button_led5"
            style="@style/pattern_button_style"
            android:text="5"
            app:layout_constraintLeft_toRightOf="@id/button_led6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_led8" />

        <Button
            android:id="@+id/button_led12"
            style="@style/pattern_button_style"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_led11"
            app:layout_constraintTop_toBottomOf="@+id/button_led5" />

        <Button
            android:id="@+id/button_led11"
            style="@style/pattern_button_style"
            android:text="11"
            app:layout_constraintLeft_toRightOf="@id/button_led12"
            app:layout_constraintRight_toLeftOf="@+id/button_led10"
            app:layout_constraintTop_toTopOf="@id/button_led12" />

        <Button
            android:id="@+id/button_led10"
            style="@style/pattern_button_style"
            android:text="10"
            app:layout_constraintLeft_toRightOf="@id/button_led11"
            app:layout_constraintRight_toLeftOf="@+id/button_led9"
            app:layout_constraintTop_toTopOf="@id/button_led12" />

        <Button
            android:id="@+id/button_led9"
            style="@style/pattern_button_style"
            android:text="9"
            app:layout_constraintLeft_toRightOf="@id/button_led10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_led12" />

        <Button
            android:id="@+id/button_led16"
            style="@style/pattern_button_style"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_led15"
            app:layout_constraintTop_toBottomOf="@+id/button_led12" />

        <Button
            android:id="@+id/button_led15"
            style="@style/pattern_button_style"
            android:text="15"
            app:layout_constraintLeft_toRightOf="@id/button_led16"
            app:layout_constraintRight_toLeftOf="@+id/button_led14"
            app:layout_constraintTop_toTopOf="@+id/button_led16" />

        <Button
            android:id="@+id/button_led14"
            style="@style/pattern_button_style"
            android:text="14"
            app:layout_constraintLeft_toRightOf="@id/button_led15"
            app:layout_constraintRight_toLeftOf="@+id/button_led13"
            app:layout_constraintTop_toTopOf="@+id/button_led16" />

        <Button
            android:id="@+id/button_led13"
            style="@style/pattern_button_style"
            android:text="13"
            app:layout_constraintLeft_toRightOf="@id/button_led14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_led16" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23" />

        <TextView
            android:id="@+id/text_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_led_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEDs"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_level1" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_copy"
            app:layout_constraintTop_toBottomOf="@id/button_led13" />

        <Button
            android:id="@+id/button_copy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="copy"
            app:layout_constraintLeft_toRightOf="@id/button_save"
            app:layout_constraintRight_toLeftOf="@+id/button_paste"
            app:layout_constraintTop_toTopOf="@id/button_save" />

        <Button
            android:id="@+id/button_paste"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="paste"
            app:layout_constraintLeft_toRightOf="@+id/button_copy"
            app:layout_constraintRight_toLeftOf="@+id/button_clear_scene"
            app:layout_constraintTop_toTopOf="@id/button_save" />

        <Button
            android:id="@+id/button_clear_scene"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="clear"
            app:layout_constraintLeft_toRightOf="@+id/button_paste"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_save" />

        <TextView
            android:id="@+id/text_scene_to_be_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="LEDs"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_save" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/scene_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:orientation="vertical">

    </ListView>
